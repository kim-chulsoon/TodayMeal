<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- jQuery CDN 제거 (Axios로 통일 예정) -->

    <!-- CSS -->
    <!-- common  -->
    <link rel="stylesheet" href="/static/css/common.css" />
    <!-- header -->
    <link rel="stylesheet" href="/static/css/header.css" />
    <!-- login -->
    <link rel="stylesheet" href="/static/css/login.css" />
    <!-- footer -->
    <link rel="stylesheet" href="/static/css/footer.css" />

    <!-- header, footer script -->
    <script defer src="/static/js/login_menu.js"></script>

    <title>로그인</title>

    <!-- JS (jQuery 제거하고 Axios 사용) -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/static/js/login.js" defer></script>
  </head>
  <body>
    <!-- 모바일 메인화면 -->
    <div class="back mobile1">
      <div class="container" onclick="con()">
        <img src="/static/img/logo/w_logo.png" alt="logo" />
        <p class="p1">오늘 뭐 먹지?</p>
        <p class="p2">매번 드는 고민! 해결</p>
      </div>
    </div>

    <!-- header include -->
    <%-include("./includes/header") %>

    <div class="con">
      <div class="loginDiv">
        <form name="loginForm">
          <input
            type="text"
            name="userId"
            class="userId"
            placeholder="  아이디"
            required
          />
          <br />
          <input
            type="password"
            name="userPw"
            class="userPw"
            placeholder="  비밀번호"
            required
          />
          <br />
          <label for="checkbox">
            <input type="checkbox" name="autoLogin" checked />
            자동 로그인
          </label>
          <br />
          <button type="button" onclick="login()" class="loginB">로그인</button>
          <br />
          <button
            type="button"
            class="registerB"
            onclick="location.href='/users/register'"
          >
            회원가입
          </button>
        </form>
      </div>
    </div>

    <!-- footer -->
    <%- include("./includes/footer") %>

    <script>
      // .title!!!!!!!
      document.querySelector(".title h3").innerText = "로그인";
      // 모바일 메뉴
      document.querySelector(".mgnb").style.display = "none";
      //로그아웃
      function logout() {
        localStorage.clear();
        document.location.href = "/";
        console.log("로그아웃");
      }

      async function login() {
        const form = document.forms["loginForm"];
        const userId = form.userId.value.trim();
        const userPw = form.userPw.value.trim();
        const autoLogin = form.autoLogin.checked;

        // 유효성 검사
        if (userId.length === 0 || userPw.length === 0) {
          alert("아이디와 비밀번호를 입력해주세요");
          return;
        }

        try {
          const response = await axios.post("/users/login", {
            userId,
            userPw,
            autoLogin,
          });

          const res = response.data;

          if (res.success) {
            console.log("Token :", res.token);
            alert("로그인 성공!");
            window.location.href = "/";
          } else {
            alert("로그인 실패: " + res.message);
          }
        } catch (error) {
          console.error("로그인 오류:", error);
          alert("로그인 중 오류가 발생했습니다.");
        }
      }

      // 메인 애니메이션
      function con() {
        const back = document.querySelector(".back");
        back.classList.add("ani");
      }
    </script>
  </body>
</html>
